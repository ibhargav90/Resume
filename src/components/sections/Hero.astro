---
import { Image } from 'astro:assets';
import heroImage from '../../../public/images/hero.png';

interface Props {
  title: string;
  subtitle: string;
  gradientColor?: string;
}

const {
  title = "Hi, I'm Bhargav Patel",
  subtitle = 'Senior Software Engineer specializing in building exceptional web applications with modern technologies.',
  gradientColor = 'from-black/80 via-black/50 to-transparent',
} = Astro.props;
---

<section class="relative h-[95vh] w-full">
  <!-- Background Image Container -->
  <div class="absolute inset-0">
    <div class="relative h-full w-full flex justify-center md:justify-end">
      <Image
        src={heroImage}
        alt="Background"
        class="hidden md:block w-[80%] md:w-[50%] lg:w-[40%] h-[95vh] object-contain object-center md:object-right translate-x-[5%] md:translate-x-0"
        loading="eager"
        quality={100}
      />
      <!-- Gradient Overlay -->
      <div class:list={['absolute inset-0 bg-gradient-to-r', gradientColor]}></div>
    </div>
  </div>

  <!-- Content Container -->
  <div class="relative z-10 container mx-auto px-4 h-full">
    <div class="flex flex-col justify-center h-full pt-16 md:pt-0">
      <div class="max-w-xl">
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
          {title}
        </h1>
        <p class="text-lg md:text-xl lg:text-2xl text-gray-200 mb-8">
          {subtitle}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <a
            href="#contact"
            class="bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary/90 transition-colors text-center"
          >
            Get in Touch
          </a>
          <a
            href="#experience"
            class="border border-white/20 text-white px-6 py-3 rounded-lg hover:border-white/40 transition-colors text-center"
          >
            View Experience
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  section {
    view-timeline-name: --hero;
    view-timeline-axis: block;
    animation-timeline: --hero;
    animation-range: entry 50% cover 50%;
  }

  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  h1,
  p,
  div {
    animation: fade-in linear both;
    animation-timeline: --hero;
    animation-range: entry 20% cover 30%;
  }
</style>
